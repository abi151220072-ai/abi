    <div id="card">
        <div class="emoji" id="icon">‚ú®</div>
        <h2 id="text">Hai! Aku udah lama mau bilang ini...<br><br>Kamu mau nggak jadi bagian dari hari-hariku? ‚ù§Ô∏è</h2>
        
        <div class="btn-group">
            <button id="yesBtn">Mau Banget! ‚ú®</button>
            <button id="noBtn">Enggak Dulu</button>
        </div>
        <p class="footer">Dibuat khusus buat kamu</p>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const text = document.getElementById('text');
        const icon = document.getElementById('icon');

        // Aksi kalau klik MAU
        yesBtn.addEventListener('click', () => {
            icon.innerHTML = "ü•∞";
            text.innerHTML = "Yeay! Makasih ya udah kasih kesempatan. <br><br> Tunggu kabar dari aku sebentar lagi!";
            document.querySelector('.btn-group').style.display = 'none';
        });

        // Aksi kalau klik ENGGAK (tombol bakal lari)
        noBtn.addEventListener('mouseover', moveButton);
        noBtn.addEventListener('touchstart', moveButton); // Untuk HP

        function moveButton() {
            const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
            const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);
            
            noBtn.style.position = 'fixed';
            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
            noBtn.style.zIndex = '999';
        }
    </script>
